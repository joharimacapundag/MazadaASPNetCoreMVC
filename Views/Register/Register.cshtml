@{
    Layout = "_NonBoilerplateLayout";
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form method="post" asp-controller="register" asp-action="register" id="registration-form">
                <h2 class="mb-4">Register</h2>
                <!-- username field -->
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="username" >
                    <div id="username-error" class="text-danger mt-1 error"></div>
                </div>
                <!-- password field -->
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                    <div id="password-error" class="text-danger mt-1 error"></div>
                </div>
                <!-- confirm password field --> 
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirm-password" required> 
                    <div id="confirm-password-error" class="text-danger mt-1 error"></div>
                </div>
                <button type="submit" class="btn btn-primary mt-3" id="register-btn">Register</button>
                <p class="mt-3">Already have an account? <a asp-controller="login" asp-action="login">Login here</a>.</p>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/register/register.js"></script>
}