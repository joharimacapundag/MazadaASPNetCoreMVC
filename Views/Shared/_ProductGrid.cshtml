@using Microsoft.IdentityModel.Tokens
@model Mazada.Models.IProductViewModel[]

@if (Model.IsNullOrEmpty())
{
    <div class="col-12 text-center py-5 my-5">
        <div class="mb-3">
            <i class="bi bi-search text-muted opacity-25" style="font-size: 4rem;"></i>
        </div>
        <h3 class="fw-bold text-dark">No products found</h3>
        <p class="text-muted mx-auto" style="max-width: 400px;">
            We couldn't find any products matching your current search or filters. 
            Try using different keywords or clearing your filters.
        </p>
        <button class="btn btn-outline-primary rounded-pill px-4 mt-2" onclick="location.reload()">
            Clear All Filters
        </button>
    </div>
}
else
{
    @foreach(var product in Model)
    {
        <partial name="_ProductCard" model="product"/>
    }
}