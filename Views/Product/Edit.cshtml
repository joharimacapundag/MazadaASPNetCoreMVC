@model Mazada.Models.ShopProductEditViewModel
@{
    ViewData["Title"] = "Edit Product";
}

@if (Model != null)
{
    <div class="container py-5">
        <form method="post" enctype="multipart/form-data" asp-controller="product" asp-action="edit" id="edit-form">
            <input type="hidden" name="id" value="@Model.ProductId" />
            
            <div class="row g-5">
                <div class="col-md-6 col-lg-5">
                    <div class="card border-0 shadow-sm overflow-hidden mb-3">
                        <img src="@Model.ProductImagePath" 
                             class="img-fluid object-fit-cover" 
                             style="width: 100%; height: 450px;" 
                             alt="@Model.ProductName"
                             id="image-preview">
                    </div>
                    
                    <div class="bg-light p-3 rounded-3 border">
                        <label class="form-label fw-bold small text-uppercase text-muted" for="product-image-path">
                            <i class="bi bi-image me-1"></i> Replace Product Image
                        </label>
                        <input type="file" name="image_path" class="form-control border-dark-subtle" id="product-image-path" />
                        <div class="form-text mt-2">Recommended size: 800x800px (JPG, PNG)</div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-7">
                    <div class="ps-md-4">
                        <nav aria-label="breadcrumb" class="mb-2">
                            <ol class="breadcrumb mb-0 small">
                                <li class="breadcrumb-item active text-dark fw-semibold">Edit Mode</li>
                            </ol>
                        </nav>

                        <h1 class="fw-bold display-6 mb-4">Edit Product Info</h1>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted" for="product-name">Product Name</label>
                            <input type="text" name="name" class="form-control form-control-lg border-dark-subtle fw-semibold" 
                                   id="product-name" value="@Model.ProductName" placeholder="Enter product name..." />
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-sm-6">
                                <label class="form-label fw-bold small text-uppercase text-muted" for="product-price">Price</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-white border-dark-subtle text-muted">$</span>
                                    <input type="number" name="price" step="0.01" class="form-control border-dark-subtle fw-bold" 
                                           id="product-price" value="@Model.ProductPrice" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label fw-bold small text-uppercase text-muted" for="product-stocks">Available Stocks</label>
                                <input type="number" name="stocks" class="form-control form-control-lg border-dark-subtle fw-bold" 
                                       id="product-stocks" value="@Model.ProductStocks" />
                            </div>
                        </div>

                        <div class="mb-4 border-top pt-4">
                            <label class="form-label fw-bold small text-uppercase text-muted" for="product-short-description">Short Description</label>
                            <textarea name="short_description" class="form-control border-dark-subtle lh-base" rows="5"
                                      id="product-short-description" placeholder="Describe your product...">@Model.ProductShortDescription</textarea>
                        </div>

                        <div class="d-flex flex-column flex-sm-row gap-3 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1 py-3 px-4 shadow-sm fw-bold" id="save-btn">
                                <i class="bi bi-check-circle me-2"></i> Save Changes
                            </button>
                            <a asp-controller="productdetails" asp-action="details" asp-route-id="@Model.ProductId"
                               class="btn btn-outline-dark btn-lg flex-grow-1 py-3 px-4">
                                <i class="bi bi-x-lg me-2"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
}

<div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-body text-center p-5">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                </div>
                <h3 class="fw-bold">Update Successful</h3>
                <p class="text-muted mb-4">Your product details have been saved to the database.</p>
                <button type="button" class="btn btn-dark btn-lg px-5 rounded-pill" data-bs-dismiss="modal">Great!</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="~/js/product/edit.js"></script>
}