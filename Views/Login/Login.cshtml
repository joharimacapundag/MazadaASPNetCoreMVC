@{
    Layout = "_NonBoilerplateLayout";
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">

            <form method="post" asp-controller="login" asp-action="login" id="login-form">
                <h2 class="mb-4">Login</h2>
                <!-- username field -->
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                    <div id="username-error" class="text-danger mt-1 error"></div>
                </div>
                <!-- password field -->
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                    <div id="password-error" class="text-danger mt-1 error"></div>
                </div>
                <button type="submit" class="btn btn-primary mt-3" id="login-btn">Login</button>
                <p class="mt-3">Don't have an account? <a asp-controller="register" asp-action="register">Register here</a>.</p>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/login/login.js"></script>
}